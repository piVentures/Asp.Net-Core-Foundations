@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-12">

            <!-- Chat Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">SignalR Chat App</h4>
                </div>
                <div class="card-body d-flex flex-column" style="height: 400px;">

                    <!-- Messages list (scrollable) -->
                    <div id="messagesList" class="flex-grow-1 mb-3 overflow-auto border rounded p-2 bg-light"></div>

                    <!-- User input form -->
                    <div class="input-group mb-2">
                        <input type="text" id="userInput" class="form-control" placeholder="Your name" />
                    </div>
                    <div class="input-group mb-2">
                        <input type="text" id="messageInput" class="form-control" placeholder="Type a message..." />
                    </div>
                    <button id="sendButton" class="btn btn-primary w-100">Send</button>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- SignalR JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

<!-- Custom Chat JS -->
<script src="~/js/chat.js"></script>
